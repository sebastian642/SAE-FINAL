@model Proyecto.Models.Area_dispositivo
<link rel="stylesheet" type="text/css" href="" />
@{
    ViewBag.Title = "Create";
}

    <body style="background-color:lightblue">
        <h2>Registrar dispositivos</h2>
     
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h4></h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <!--Dentro de la clase:control-label col-md-2 -->
                <p style="font-size:15px"><strong>&nbsp;&nbsp;&nbsp;&nbsp;Nombre del Dispositivo</strong></p>

                @*  @Html.LabelFor(model => model.Nombre_del_dispositivo, htmlAttributes: new { @class = "control-label col-md-2" })*@                          
                <div class="col-md-10">                   
                    @Html.EditorFor(model => model.Nombre_del_dispositivo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nombre_del_dispositivo, "", new { @class = "text-danger" })
                </div>
         <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////-->
            </div>
            <div class="form-group">
                <p style="font-size:15px"><strong>&nbsp;&nbsp;&nbsp;&nbsp;Numero de serie</strong></p>
                @* @Html.LabelFor(model => model.Numero_de_serie, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">                 
                    @Html.EditorFor(model => model.Numero_de_serie, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Numero_de_serie, "", new { @class = "text-danger" })
                </div>
            </div>              
            <div class="form-group">
                <p style="font-size:15px"><strong>&nbsp;&nbsp;&nbsp;&nbsp;Accesorio Dispositivo</strong></p>
                @* @Html.LabelFor(model => model.Accesorio_del_dispositivo, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Accesorio_del_dispositivo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Accesorio_del_dispositivo, "", new { @class = "text-danger" })
                </div>
            </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Registrar" class="btn btn-default" />                      
                    </div>
                </div>
            </div>
        }
        <div> 
            @Html.ActionLink("Registros", "Index")
            <br />
            <br />
            @Html.ActionLink("Pagina Principal","Index","Home")
        </div>
    </body>